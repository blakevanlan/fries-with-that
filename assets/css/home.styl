body.home-page
   background: #ebdf92 url(/img/bg.jpg) 50% 710px no-repeat 
   min-height: 1600px

.top-highlight
   height: 10px
   background: primary-highlight

.header
   height: 700px
   background: primary-dark

   .title
      position: relative
      font-family: 'Orbitron', sans-serif
      color: #fff
      margin: 0 auto
      width: 400px
      top: 60px
      .rest
         position: absolute
         top: -3px
         left: 161px
         font-size: 20px

      .that
         font-size: 160px
         text-align: center

   .title-separator
      position: relative
      width: 600px
      height: 1px
      top: 50px
      border-top: 1px solid #9B9B9B
      margin: 0 auto

   .description
      position: relative
      width: 600px
      margin: 0 auto
      top: 75px
      color: #c2c2c2
      font-family: 'Arial', sans-serif
      font-size: 12px
      line-height: 18px

   .button-wrap
      text-align: center
      padding-top: 185px

   .play-button
      position: relative
      padding: 12px 16px
      display: inline-block
      border: 1px solid #fff
      border-radius: 8px
      font-family: 'Orbitron', sans-serif
      font-size: 18px
      cursor: pointer
      .text
         color: #fff
      .arrow
         display: inline-block
         position: relative
         width: 0px
         height: 0px
         margin-left: 12px
         border-left: 13px solid #fff
         border-top: 9px solid transparent
         border-bottom: 9px solid transparent
         top: 3px
      &:hover
         background: primary-highlight


.divider
   height: 10px
   background: transparent

.console
   width: 550px
   height: 400px
   color: console-text-color
   background: console-background-color
   border: 2px solid console-border-color
   margin: 272px auto 0
   font-family: "Cutive Mono", serif
   font-size: 15px

   .console-scrollbar
      height: 320px
      padding: 15px
      line-height: 17px
      overflow: auto

      .room
         color: console-room-color
      .object
         color: console-object-color
   
   .console-prompt
      height: 32px
      line-height: 20px
      padding: 10px 15px


      .console-prompt-input 
         margin-left: 5px
         border: 0
         background: none
         height: 30px
         width: 490px
         color: console-text-color
         &:focus
            outline: 0
            border: 0

@media only screen and (-webkit-min-device-pixel-ratio: 1.5)
   body.home-page
      background-image: url(/img/bg@2x.jpg)
      background-size: 1000px 1000px



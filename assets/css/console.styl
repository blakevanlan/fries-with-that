.console
   width: 550px
   height: 400px
   color: console-text-color
   background: console-background-color
   border: 2px solid console-border-color
   margin: 10px auto
   font-family: "Cutive Mono"
   font-size: 15px

   .console-scrollbar
      height: 320px
      padding: 15px
      line-height: 16px
      overflow: auto

      .room
         color: console-room-color
      .object
         color: console-object-color
   
   .console-prompt
      height: 20px
      line-height: 20px
      padding: 10px 15px


      .console-prompt-input 
         margin-left: 5px
         border: 0
         background: none
         height: 30px
         width: 490px
         &:focus
            outline: 0
            border: 0
